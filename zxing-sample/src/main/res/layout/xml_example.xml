<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <me.dm7.barcodescanner.zxing.ZXingScannerView
        android:id="@+id/scanner_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:borderColor="#ffffff"
        app:borderLength="16dp"
        app:borderOffset="30dp"
        app:bottomView="@layout/bottom_view"
        app:cornerRadius="0dp"
        app:maskColor="#99ffffff"
        app:outerBorderWidth="10dp"
        app:outerCornerRadius="20dp"
        app:roundedCorner="false"
        app:topOffset="90dp" />

    <include layout="@layout/bottom_view" />
</FrameLayout>
